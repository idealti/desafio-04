{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <table class="table table-dark table-striped">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ task.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ task.title }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ task.description }}</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ task.status }}</td>
        </tr>
        <tr>
            <th>Author</th>
            <td>{{ task.author.username }}</td>
        </tr>
        <tr>
            <th>CreatedAt</th>
            <td>{{ task.createdAt ? task.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>UpdatedAt</th>
            <td>{{ task.updatedAt ? task.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-light" href="{{ path('app_task_index') }}">{{ 'Back to list'|trans }}</a>

    <a class="btn btn-light" href="{{ path('app_task_edit', {'id': task.id}) }}">{{ 'edit'|trans|capitalize }}</a>

    {{ include('task/_delete_form.html.twig') }}
{% endblock %}
